{
  "manifest_version": 3,
  "name": "Twitch Message",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "op.jpg"
  },
  "permissions": ["scripting", "activeTab", "tabs", "storage"],
  "host_permissions": ["https://*.twitch.tv/*"],
  "content_scripts": [
    {
      "js": ["script.js"],
      "matches": ["https://*.twitch.tv/*"]
    }
  ]
}
